{% extends 'admin/base.html.twig' %}

{% set h2 = 'Form example' %}

{% block title %}{{ h2 }} | {{ brand }}{% endblock %}

{% block body %}
    <grid>
        <div col="2/3">
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Slug</th>
                    <th>Country</th>
                    <th>Logo</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for club in clubs %}
                    <tr>
                        <td>{{ club.id }}</td>
                        <td>{{ club.name }}</td>
                        <td>{{ club.slug }}</td>
                        <td>{{ club.country }}</td>
                        <td><img src="{{ club.logo }}" alt="{{ club.name }}"/></td>
                        <td>
                            <button>add jersey</button>
                            <button>edit</button>
                            {% if club.jerseys.count == 0 %}
                                <button>delete</button>
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div col="1/3">

            {% if form.vars.submitted and form.vars.valid %}
                <card>
                    <h3>Submitted and valid values ‚ú®</h3>

                    <table>
                        <tr>
                            <th>Name</th>
                            <td>{{ dto.name }}</td>
                        </tr>

                        <tr>
                            <th>Slug</th>
                            <td>{{ dto.slug }}</td>
                        </tr>

                        <tr>
                            <th>Country</th>
                            <td>{{ dto.country }}</td>
                        </tr>

                        <tr>
                            <th>Logo</th>
                            <td>{{ dto.logo }}</td>
                        </tr>
                    </table>

                    <a href="{{ path('create_club_action') }}" btn primary>Retry</a>
                </card>
            {% else %}
                <h2>Create a new club üîè</h2>
                <fieldset>
                    {{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
                </fieldset>
            {% endif %}
        </div>
    </grid>
{% endblock %}
