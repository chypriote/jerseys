{% extends 'admin/base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
	<h1>Club index</h1>

	<table class="table">
		<thead>
		<tr>
			<th>Name</th>
			<th>Slug</th>
			<th>Country</th>
			<th>Logo</th>
			<th>UpdatedAt</th>
			<th>Id</th>
			<th>actions</th>
		</tr>
		</thead>
		<tbody>
		{% for club in clubs %}
			<tr>
				<td>{{ club.name }}</td>
				<td>{{ club.slug }}</td>
				<td>{{ club.country }}</td>
				<td>{{ club.logo }}</td>
				<td>{{ club.updatedAt|date('Y-m-d') }}</td>
				<td>{{ club.id }}</td>
				<td>
					<a href="{{ path('admin.clubs.show', {'slug': club.slug}) }}">show</a>
					<a href="{{ path('admin.clubs.edit', {'slug': club.slug}) }}">edit</a>
				</td>
			</tr>
		{% else %}
			<tr>
				<td colspan="9">no records found</td>
			</tr>
		{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('admin.clubs.create') }}">Create new</a>
{% endblock %}
