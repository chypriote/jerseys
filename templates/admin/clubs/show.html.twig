{% extends 'admin/base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
	<h1>Club</h1>

	<table class="table">
		<tbody>
		<tr>
			<th>Name</th>
			<td>{{ club.name }}</td>
		</tr>
		<tr>
			<th>Slug</th>
			<td>{{ club.slug }}</td>
		</tr>
		<tr>
			<th>Country</th>
			<td>{{ club.country }}</td>
		</tr>
		<tr>
			<th>Logo</th>
			<td>{{ club.logo }}</td>
		</tr>
		<tr>
			<th>CreatedAt</th>
			<td>{{ club.createdAt|date('Y-m-d') }}</td>
		</tr>
		<tr>
			<th>UpdatedAt</th>
			<td>{{ club.updatedAt|date('Y-m-d') }}</td>
		</tr>
		<tr>
			<th>Id</th>
			<td>{{ club.id }}</td>
		</tr>
		</tbody>
	</table>

	<a href="{{ path('admin.clubs.list') }}">back to list</a>

	<a href="{{ path('admin.clubs.edit', {'slug': club.slug}) }}">edit</a>

	<form method="post" action="{{ path('admin.clubs.delete', {'slug': club.slug}) }}"
				onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club.id) }}">
		<button class="btn">Delete</button>
	</form>
{% endblock %}
