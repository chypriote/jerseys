{% extends 'admin/base.html.twig' %}

{% set h2 = 'Form example' %}

{% block title %}{{ h2 }} | {{ brand }}{% endblock %}

{% block body %}
    <grid>
        <div col="2/3">
            <table>
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Year</th>
                    <th>Slug</th>
                    <th>Club</th>
                    <th>Picture</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for jersey in jerseys %}
                    <tr>
                        <td>{{ jersey.id }}</td>
                        <td>{{ jersey.year }}</td>
                        <td>{{ jersey.slug }}</td>
                        <td>{{ jersey.club.name }}</td>
                        <td><img src="{{ jersey.picture }}" alt="{{ jersey.slug }}"/></td>
                        <td>
                            <button>edit</button>
                            <button>delete</button>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div col="1/3">
            {% if form.vars.submitted and form.vars.valid %}
                <card>
                    <h3>Submitted and valid values ‚ú®</h3>

                    <table>
                        <tr>
                            <th>Year</th>
                            <td>{{ dto.year }}</td>
                        </tr>
                        <tr>
                            <th>Club</th>
                            <td>{{ dto.club.name }}</td>
                        </tr>

                        {% if dto.slug is defined %}
                            <tr>
                                <th>Slug</th>
                                <td>{{ dto.slug }}</td>
                            </tr>
                        {% endif %}

                        <tr>
                            <th>picture</th>
                            <td>{{ dto.picture }}</td>
                        </tr>
                    </table>

                    <a href="{{ path('create_jersey_action') }}" btn primary>Retry</a>
                </card>
            {% else %}
                <h2>Create a new jersey üîè</h2>
                <fieldset>
                    {{ form(form, {'attr': {'novalidate': 'novalidate'}}) }}
                </fieldset>
            {% endif %}
        </div>
    </grid>
{% endblock %}
