{% extends 'admin/base.html.twig' %}

{% block title %}Edit Jersey{% endblock %}

{% block body %}
	<h1>Edit Jersey</h1>
	<a href="{{ path('admin.jerseys.list') }}">back to list</a>
	<grid>
		<div col="1/2">
			<img src="{{ jersey.picture }}" alt="{{ jersey.slug }}"/>
			{{ include('admin/_form.html.twig', {'button_label': 'Update'}) }}
			<form method="post" action="{{ path('admin.jerseys.delete', {'slug': jersey.slug}) }}"
						onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ jersey.id) }}">
				<button type="button">Delete</button>
			</form>
		</div>
	</grid>


{% endblock %}
