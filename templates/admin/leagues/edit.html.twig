{% extends 'admin/base.html.twig' %}

{% block title %}Edit League{% endblock %}

{% block body %}
	<h1>Edit League</h1>

	<grid>
		<div col="1/2">
			<card>
				{{ form(form) }}
			</card>
			<a btn href="{{ path('admin.leagues.index') }}">back to list</a>
			<form method="post" action="{{ path('admin.leagues.delete', {'slug': league.slug}) }}"
						onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ league.id) }}">
				<button type="submit">Delete</button>
			</form>
		</div>

	</grid>
{% endblock %}
