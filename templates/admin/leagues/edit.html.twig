{% extends 'admin/base.html.twig' %}

{% block title %}Edit League{% endblock %}

{% block body %}
	<h1>Edit League</h1>

	<grid>
		<div col="2/3">
			{{ include('admin/_form.html.twig', {'button_label': 'Update'}) }}

			<a href="{{ path('admin.leagues.create') }}">back to list</a>
		</div>
		<div col="1/3">
			<form method="post" action="{{ path('admin.leagues.delete', {'slug': league.slug}) }}"
						onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ league.id) }}">
				<button type="button">Delete</button>
			</form>
		</div>

		<div col="3/3">
			<h2>Clubs</h2>
			<grid>
				{% for club in league.clubs %}
					<div col="1/4">
						<img src="{{ club.logo }}" alt="{{ club.name }}"/>
						{{ club.name }}
					</div>
				{% endfor %}
			</grid>
		</div>

	</grid>
{% endblock %}
