{% extends 'admin/base.html.twig' %}

{% block title %}Edit Offer{% endblock %}

{% block body %}
	<h1>Edit Offer</h1>

	<grid>
		<div col="2/3">
			<card>
				{{ form(form) }}
			</card>
			<form method="post" action="{{ path('admin.offers.delete', {'id': offer.id}) }}"
						onsubmit="return confirm('Are you sure you want to delete this item?');">
				<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offer.id) }}">
				<button type="submit">Delete</button>
			</form>
		</div>
		<div col="1/3">
			<img src="{{ asset('/storage/jerseys/' ~ offer.jersey.picture) }}" alt="{{ offer.jersey.computedName }}"/>
			<grid>
				<div col="1/3"><a btn href="{{ path('admin.jerseys.show', {slug: offer.jersey.slug}) }}">Jersey</a></div>
				<div col="1/3"><a btn href="{{ path('admin.sellers.show', {slug: offer.seller.slug}) }}">Seller</a></div>
				<div col="1/3"><a btn href="{{ path('admin.clubs.show', {slug: offer.jersey.club.slug}) }}">Club</a></div>
			</grid>
		</div>
	</grid>
{% endblock %}
