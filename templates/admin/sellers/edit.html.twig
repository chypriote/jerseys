{% extends 'admin/base.html.twig' %}

{% block title %}Edit Seller{% endblock %}

{% block body %}
	<h1>Edit Seller</h1>
	<h2><img src="{{ seller.logo }}" alt="{{ seller.name }}"/> {{ seller.name }}</h2>

	{{ include('admin/_form.html.twig', {'button_label': 'Update'}) }}

	<a href="{{ path('admin.sellers.list') }}">back to list</a>

	<form method="post" action="{{ path('admin.sellers.delete', {'slug': seller.slug}) }}"
				onsubmit="return confirm('Are you sure you want to delete this item?');">
		<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ seller.id) }}">
		<button type="button">Delete</button>
	</form>
{% endblock %}
